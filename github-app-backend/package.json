{
  "name": "claude-todo-github-app",
  "version": "1.0.0",
  "description": "GitHub App that reads todo lists and creates repositories with Claude integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:build": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/app": "^15.0.0",
    "@octokit/webhooks": "^13.0.0",
    "express": "^4.21.0",
    "dotenv": "^16.4.5",
    "axios": "^1.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@octokit/types": "^13.0.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "github-app",
    "claude",
    "todo",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}